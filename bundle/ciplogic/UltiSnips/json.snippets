snippet tsconfig "Add a tsconfig"
{
	"compilerOptions": {
		${1/.+/"target": "/}${1:ES3}${1/.+/",/}
		${2/.+/"module": "/}${2:commonjs}${2/.+/",/}
		${3/.+/"sourceMap": "/}${3:true}${3/.+/",/}
	}
}
endsnippet

snippet workplace_module "Adds a workplace module"
{
	"name" : "${1:module-name}",
	"builds" : {
		"$1" : {
			"jsfiles" : [
				"${2:js-file.js}"
			],
			"servicefiles" : [
				"${3:service.js}"
			],
			"config" : {
				"requires" : [
					"htio",
					"notifier",
					"json-parse",
					"datatype-xml",
					"spring-config",
					"request-parameters",
					"workflow-navigation",
					"workflow"
				],
				"servicerequires" : [
					"layout-workflow",
					"workflow",
					"pipeline",
					"request-parameters",
					"workflow-navigation",
					"htio"
				],
				"lang" : ["de"]
			}
		}
	}
}
endsnippet
