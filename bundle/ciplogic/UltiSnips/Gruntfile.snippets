snippet grunt "Adds a default empty grunt configuration"
/**
 * Grunt project configuration.
 */
module.exports = function(grunt) {
    // configuration for the plugins.
    grunt.initConfig({
        ${0:}
    });

    // load NPM tasks:
    // grunt.loadNpmTasks('grunt-contrib-watch');

    // register our tasks:
